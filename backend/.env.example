# PropBase Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=PropBase
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# ===========================================
# SERVER
# ===========================================
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/propbase
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# ===========================================
# CELERY
# ===========================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# GOOGLE OAUTH
# ===========================================
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_SERVICE_ACCOUNT_JSON=

# ===========================================
# APPLE OAUTH
# ===========================================
APPLE_OAUTH_CLIENT_ID=
APPLE_OAUTH_TEAM_ID=
APPLE_OAUTH_KEY_ID=
APPLE_OAUTH_PRIVATE_KEY=

# ===========================================
# MAPS
# ===========================================
MAPBOX_ACCESS_TOKEN=
GOOGLE_MAPS_API_KEY=

# ===========================================
# OPENAI
# ===========================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# ===========================================
# NOTION
# ===========================================
NOTION_API_KEY=
NOTION_DATABASE_ID=

# ===========================================
# AMOCRM
# ===========================================
AMOCRM_BASE_URL=
AMOCRM_CLIENT_ID=
AMOCRM_CLIENT_SECRET=
AMOCRM_REDIRECT_URI=
AMOCRM_ACCESS_TOKEN=
AMOCRM_REFRESH_TOKEN=

# ===========================================
# TELEGRAM
# ===========================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=
TELEGRAM_ALERT_CHAT_ID=

# ===========================================
# WHATSAPP
# ===========================================
WHATSAPP_PROVIDER=meta
WHATSAPP_API_KEY=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# ===========================================
# YANDEX DISK
# ===========================================
YANDEX_DISK_OAUTH_TOKEN=

# ===========================================
# CURRENCY EXCHANGE
# ===========================================
FX_RATES_API_KEY=
FX_RATES_BASE_CURRENCY=USD

# ===========================================
# EMAIL / SMTP
# ===========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@propbase.com

# ===========================================
# S3 / OBJECT STORAGE (MinIO compatible)
# ===========================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=propbase
S3_REGION=us-east-1

# ===========================================
# MONITORING
# ===========================================
SENTRY_DSN=
